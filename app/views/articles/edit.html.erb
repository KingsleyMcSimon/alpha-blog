<h1> Edit existing article</h1>

<% if @article.errors.any? %>
<h2> The following errors prevented the article from being created</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
    </ul>
    <% end %>

<%= form_for @article do |k| %>
    <p>

    <%= k.label :title %><br/>
    <%= k.text_field :title %>

    </p>

    <p>

    <%= k.label :description %><br/>
    <%= k.text_area :description %>

    </p>

    <p>

    <%= k.submit %>

    </p>



    <% end %>
<br />
    <%= link_to "Back to articles listing", articles_path %>